{
  "name": "sops-age",
  "version": "2.0.0",
  "description": "Node.js sops age decryption",
  "repository": "humphd/sops-age",
  "license": "MIT",
  "author": {
    "name": "David Humphrey"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/",
    "package.json",
    "LICENSE.md",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "format": "prettier . --write --cache",
    "format-check": "prettier . --check --cache",
    "lint": "pnpm run-s lint:*",
    "lint:oxlint": "oxlint",
    "lint:knip": "knip",
    "lint:packages": "pnpm dedupe --check",
    "test": "run-s test:unit test:smoke",
    "test:watch": "vitest",
    "test:unit": "vitest run",
    "test:smoke": "run-s build test:smoke-*",
    "test:smoke-node": "node --test tests/smoke/node/node.test.cjs",
    "test:smoke-deno": "deno test --allow-read tests/smoke/deno/deno.test.ts",
    "test:smoke-bun": "bun test tests/smoke/bun/bun.test.ts",
    "typecheck": "tsc",
    "prepare": "husky"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write"
  },
  "dependencies": {
    "@noble/ciphers": "^1.1.3",
    "age-encryption": "^0.1.5",
    "dotenv": "^16.4.7",
    "lodash": "^4.17.21",
    "yaml": "^2.6.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^8.0.2",
    "@types/deno": "^2.0.0",
    "@types/lodash": "^4.17.13",
    "@types/node": "^20.17.10",
    "@vitest/coverage-v8": "^1.6.0",
    "bun": "^1.1.42",
    "bun-types": "^1.1.42",
    "console-fail-test": "^0.2.3",
    "deno": "^2.1.4",
    "husky": "^9.1.7",
    "knip": "^5.41.1",
    "lint-staged": "^15.3.0",
    "npm-run-all": "^4.1.5",
    "oxlint": "^0.15.3",
    "prettier": "4.0.0-alpha.10",
    "prettier-plugin-packagejson": "^2.5.6",
    "release-it": "^17.11.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^1.6.0"
  },
  "packageManager": "pnpm@9",
  "engines": {
    "node": ">=18"
  }
}
